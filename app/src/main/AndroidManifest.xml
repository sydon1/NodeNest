<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NodeNest"
        tools:targetApi="31">
        <activity
            android:name=".view.WaitingActivity"
            android:exported="false" />
        <activity
            android:name=".view.Loading"
            android:exported="false" />
        <activity
            android:name=".view.ModifyDeviceActivity"
            android:exported="true" />
        <activity
            android:name=".view.AddingDeviceActivity"
            android:exported="true" />
        <activity
            android:name=".view.SensorTempActivity"
            android:exported="true" />
        <activity
            android:name=".view.SensorPressureActivity"
            android:exported="true" />
        <activity
            android:name=".view.SensorLightActivity"
            android:exported="true" />
        <activity
            android:name=".view.SensorTestActivity"
            android:exported="true" />
        <activity
            android:name=".view.IoTOverviewActivity"
            android:exported="true" />
        <activity
            android:name=".view.RegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>